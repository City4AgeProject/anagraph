<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"classpath://org/hibernate/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="eu.city4age.dashboard.api.model">
    <class name="CdRiskStatus" table="cd_risk_status" optimistic-lock="version">

        <id name="riskStatus" type="java.lang.Character">
            <column name="risk_status" length="1" />
            <generator class="assigned" />
        </id>
        
        <property name="riskStatusDescription" type="string">
            <column name="risk_status_description" length="50" />
        </property>
        
        <property name="confidenceRating" type="big_decimal">
            <column name="confidence_rating" precision="3" />
        </property>
        
        <property name="iconImage" type="binary">
            <column name="icon_image" />
        </property> 
        
        <property name="iconImagePath" type="string">
            <column name="icon_image_path" />
        </property>
        
    </class>
</hibernate-mapping>
